<idea-plugin version="2">
  <name>hello world</name>
  <description>my first idea plugin</description>
  <version>1.0</version>
  <vendor>YourCompany</vendor>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <application-components>
    <!-- Add your application components here -->
      <component>
          <implementation-class>com.taobao.wireless.wuzhong.HelloApp</implementation-class>
      </component>
  </application-components>

  <project-components>
    <!-- Add your project components here -->
      <component>
          <implementation-class>com.taobao.wireless.wuzhong.HelloProj</implementation-class>
      </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="HelloAction" class="com.taobao.wireless.wuzhong.HelloAction" text="HelloAction">
          <add-to-group group-id="WindowMenu" anchor="first"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>